@model IEnumerable<TechStore.Models.Product>

@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Loi != null)
{
    <div class="alert alert-info">
        @ViewBag.Loi
    </div>
}

<link rel="stylesheet" href="~/Content/stylepro.css" />
<div id="div-pro-list"style="width: 80%; margin: auto">
    @foreach (var item in Model)
    {
        <div class="card" onclick="window.location.href='@Url.Action("Details", "CustomerPro", new { id = item.ProductID })'">
            @if (item.Discount > 0)
            {
                <span class="discount-badge">@item.Discount% OFF</span>
            }
            <img src="~/Images/@item.ImagePro" alt="tech-pro" class="product-image">
            <h1 class="product-name">@item.NamePro</h1>
            <p class="price">@item.Price</p>
        </div>
    }
</div>
