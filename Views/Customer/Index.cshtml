@model IEnumerable<TechStore.Models.Customer>

@{
    ViewBag.Title = "Customer List";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <h2 class="text-center">Danh sách khách hàng</h2>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.NameCus)</th>
                <th>@Html.DisplayNameFor(model => model.PhoneCus)</th>
                <th>@Html.DisplayNameFor(model => model.EmailCus)</th>
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.IsVIP)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NameCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.EmailCus)</td>
                    <td>@Html.DisplayFor(modelItem => item.City)</td>
                    <td>@Html.DisplayFor(modelItem => item.IsVIP)</td>
                    <td>
                        @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.IDCus }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.IDCus }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

