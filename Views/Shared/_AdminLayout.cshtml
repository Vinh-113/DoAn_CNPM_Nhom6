<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/Content/StyleAdmin.css" />
    <title>Admin - TechStoreVN</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Admin Dashboard</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Product")">Quản lý Sản phẩm</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Statistics","Admins")">Thống kê</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Categories")">Quản lý Danh mục</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","OrderDetails")">Quản lý Đơn hàng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Customer")">Quản lý Khách hàng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Reviews")">Quản lý Đánh giá</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","OrderPro")">Tình trạng đơn hàng</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index","Home")">Quay lại trang chủ</a>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content Area -->
    <div class="container-fluid mt-4">
        <div class="row">
            <main role="main" class="col-lg-12 px-4">
                @RenderBody()
            </main>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
