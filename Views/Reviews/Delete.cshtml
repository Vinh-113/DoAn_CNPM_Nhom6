@model TechStore.Models.Review

@{
    ViewBag.Title = "Delete Review";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger shadow">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">
                        <i class="fas fa-exclamation-triangle mr-2"></i>Xác nhận ẩn
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-question-circle mr-2"></i>
                        Bạn có chắc chắn muốn ẩn review này không?
                    </div>

                    <h4 class="border-bottom pb-2 mb-3">Chi tiết đánh giá</h4>

                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">
                            Số sao
                        </div>
                        <div class="col-md-8">
                            <div class="text-warning">
                                @for (int i = 0; i < Model.Rating; i++)
                                {
                                    <i class="fas fa-star"></i>
                                }
                                @for (decimal i = Model.Rating; i < 5; i++)
                                {
                                    <i class="far fa-star"></i>
                                }
                                <span class="ml-2 text-dark">(@Model.Rating/5)</span>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">
                            Nội dung review
                        </div>
                        <div class="col-md-8">
                            <p class="border-left pl-3">@Html.DisplayFor(model => model.ReviewContent)</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4 font-weight-bold">
                            <p>Ngày review</p>
                        </div>
                        <div class="col-md-8">
                            <span class="badge badge-secondary">
                                <i class="far fa-calendar-alt mr-1"></i>
                                @Model.ReviewDate
                            </span>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left mr-1"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash-alt mr-1"></i> Ẩn review này
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

