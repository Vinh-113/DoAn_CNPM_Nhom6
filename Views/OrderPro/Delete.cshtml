@model TechStore.Models.OrderPro

@{
    ViewBag.Title = "Hủy Đơn Hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <div class="card border-0 shadow">
        <div class="card-header bg-danger text-white">
            <h3 class="text-center mb-0">Hủy Đơn Hàng #@Model.ID</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="fa fa-exclamation-triangle me-2"></i>
                <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn hủy đơn hàng này không? Hành động này không thể hoàn tác.
            </div>

            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Thông tin đơn hàng</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>@Html.DisplayNameFor(model => model.ID):</strong> @Html.DisplayFor(model => model.ID)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.DateOrder):</strong> @Html.DisplayFor(model => model.DateOrder)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.Status):</strong> <span class="badge bg-info">@Html.DisplayFor(model => model.Status)</span></p>
                            <p><strong>@Html.DisplayNameFor(model => model.TotalAmount):</strong> <span class="text-danger fw-bold">@Html.DisplayFor(model => model.TotalAmount)</span></p>
                            <p><strong>@Html.DisplayNameFor(model => model.PaymentMethod):</strong> @Html.DisplayFor(model => model.PaymentMethod)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.PaymentStatus):</strong> @Html.DisplayFor(model => model.PaymentStatus)</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">Thông tin giao hàng</h5>
                        </div>
                        <div class="card-body">
                            <p><strong>@Html.DisplayNameFor(model => model.Customer.NameCus):</strong> @Html.DisplayFor(model => model.Customer.NameCus)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.AddressDeliverry):</strong> @Html.DisplayFor(model => model.AddressDeliverry)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.DeliveryDate):</strong> @Html.DisplayFor(model => model.DeliveryDate)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.TrackingNumber):</strong> @Html.DisplayFor(model => model.TrackingNumber)</p>
                            <p><strong>@Html.DisplayNameFor(model => model.ShippingCost):</strong> @Html.DisplayFor(model => model.ShippingCost)</p>
                        </div>
                    </div>
                </div>
            </div>

            @using (Html.BeginForm("Delete", "OrderPro", FormMethod.Post, new { @class = "text-center" }))
            {
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" value="@Model.ID" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <input type="submit" value="Xác nhận hủy đơn hàng" class="btn btn-danger btn-lg px-4" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-secondary btn-lg px-4 ms-md-2" })
                </div>
            }
        </div>
    </div>
</div>