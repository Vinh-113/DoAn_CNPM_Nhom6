@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Shared/_LogSignLayout.cshtml";
}
<link rel="stylesheet" href="~/Content/styleLogSign.css" />
<link rel="stylesheet" href="~/Content/bootstrap.css" />
<div style="padding: 50px">
    <div class="container-sm">
        <div class="card" style="padding:20px">
            <div class="card-header text-center">
                <h2>Đăng nhập tài khoản</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Admins"))
                {
                    @Html.ValidationSummary(true);
                    if (ViewBag.ThongBao != null)
                    {
                        <div class="alert alert-info">@ViewBag.ThongBao</div>
                    }
                    <div class="form-group">
                        @Html.Label("Tên đăng nhập", new { @class = "form-label" })
                        @Html.TextBox("NameUser", null, new { @class = "form-control rounded-input", required = "required", placeholder = "Nhập tên bạn vào" })
                    </div>

                    <div class="form-group">
                        @Html.Label("Mật khẩu", new { @class = "form-label" })
                        @Html.Password("PasswordUser", null, new { @class = "form-control rounded-input", required = "required", placeholder = "Nhập mật khẩu bạn vào" })
                    </div>

                    <button type="submit" class="btn btn-primary w-100">Xác nhận</button>
                }

            </div>
        </div>
    </div>
</div>