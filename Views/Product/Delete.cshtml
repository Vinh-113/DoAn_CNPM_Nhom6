@model TechStore.Models.Product

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@if (ViewBag.Loi != null)
{
    <div class="alert alert-info text-center rounded-pill px-4 py-3" style="max-width: 600px; margin: 40px auto;">
        @ViewBag.Loi
    </div>
}
else
{
    <div class="container" style="max-width: 800px; margin: 40px auto; background: #fff; padding: 40px; border-radius: 20px; box-shadow: 0 8px 30px rgba(0,0,0,0.05);">
        <h2 class="text-center mb-4" style="font-weight: 700; color: #e11d48;">🗑️ Xóa sản phẩm</h2>
        <p class="text-center mb-4 fs-5 text-muted">Bạn có chắc chắn muốn xóa sản phẩm này không?</p>

        <div class="row g-4 align-items-center">
            <div class="col-md-4 text-center">
                <img src="~/Images/@Model.ImagePro" class="img-fluid rounded-4 shadow-sm" style="max-height: 200px; object-fit: cover;" />
            </div>
            <div class="col-md-8">
                <dl class="row fs-5">
                    <dt class="col-sm-4 fw-bold text-secondary">@Html.DisplayNameFor(model => model.NamePro)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.NamePro)</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">@Html.DisplayNameFor(model => model.DecriptionPro)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.DecriptionPro)</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">@Html.DisplayNameFor(model => model.Price)</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>

                    <dt class="col-sm-4 fw-bold text-secondary">Thuộc danh mục gì</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Category1.NameCate)</dd>
                </dl>
            </div>
        </div>

        @using (Html.BeginForm("Delete", "Product", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.ProductID)

            <div class="d-flex justify-content-center gap-3 mt-4">
                <input type="submit" value="Xác nhận xóa" class="btn btn-danger rounded-pill px-4 py-2" />
                @Html.ActionLink("Quay lại", "Index", "", htmlAttributes: new { @class = "btn btn-outline-secondary rounded-pill px-4 py-2" })
            </div>
        }
    </div>
}
