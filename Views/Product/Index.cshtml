@model IEnumerable<TechStore.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="max-width: 1200px; margin: 40px auto; background: #fff; padding: 40px; border-radius: 20px; box-shadow: 0 8px 30px rgba(0,0,0,0.05);">
    <h2 class="text-center mb-4" style="font-weight: 700; color: #4f46e5;">📦 Danh sách sản phẩm</h2>

    <div class="text-center mb-4">
        @Html.ActionLink("Tạo sản phẩm mới", "Create", "", htmlAttributes: new { @class = "btn btn-primary rounded-pill px-4 py-2", style = "background: #4f46e5; border: none;" })
    </div>

    <table class="table table-hover table-bordered text-center align-middle" style="border-radius: 15px; overflow: hidden;">
        <thead style="background: #4f46e5; color: #fff;">
            <tr>
                <th>Tên sản phẩm</th>
                <th>Mô tả sản phẩm</th>
                <th>Giá sản phẩm</th>
                <th>Hình ảnh</th>
                <th>Phân loại</th>
                <th>Giảm giá</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NamePro)</td>
                    <td>@Html.DisplayFor(modelItem => item.DecriptionPro)</td>
                    <td>@Html.DisplayFor(modelItem => item.Price)</td>
                    <td>
                        <img src="~/Images/@item.ImagePro" style="width: 100px; border-radius: 12px;" />
                    </td>
                    <td>@Html.DisplayFor(modelItem => item.Category1.NameCate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Discount)</td>
                    <td>
                        <div class="d-flex justify-content-center gap-2">
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ProductID }, htmlAttributes: new { @class = "btn btn-success rounded-pill px-3 py-1" })
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, htmlAttributes: new { @class = "btn btn-danger rounded-pill px-3 py-1" })
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
