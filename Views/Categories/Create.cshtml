@model TechStore.Models.Category

@{
    ViewBag.Title = "Tạo danh mục mới";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-folder-plus me-2"></i>Tạo danh mục mới
                    </h3>
                </div>
                @if (ViewBag.Loi != null)
                {
                    <div class="alert alert-warning text-center mb-3">
                        @ViewBag.Loi
                    </div>
                }
                <div class="card-body">
                    @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "needs-validation" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <div class="mb-4">
                            <div class="form-floating">
                                @Html.EditorFor(model => model.IDCate, new { htmlAttributes = new { @class = "form-control", placeholder = "Mã danh mục" } })
                                @Html.LabelFor(model => model.IDCate, "Mã danh mục", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.IDCate, "", new { @class = "text-danger" })
                            </div>
                            <small class="text-muted">Nhập mã danh mục duy nhất</small>
                        </div>

                        <div class="mb-4">
                            <div class="form-floating">
                                @Html.EditorFor(model => model.NameCate, new { htmlAttributes = new { @class = "form-control", placeholder = "Tên danh mục" } })
                                @Html.LabelFor(model => model.NameCate, "Tên danh mục", new { @class = "control-label" })
                                @Html.ValidationMessageFor(model => model.NameCate, "", new { @class = "text-danger" })
                            </div>
                            <small class="text-muted">Nhập tên danh mục sản phẩm</small>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Trở về danh sách
                            </a>
                            <button type="submit" class="btn btn-success">
                                <i class="fas fa-save me-1"></i>Tạo danh mục
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>


    <script>$(document).ready(function() {
            // Auto focus on first input field when page loads
            $('form input:first').focus();
        });</script>
