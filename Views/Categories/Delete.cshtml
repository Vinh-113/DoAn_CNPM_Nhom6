@model TechStore.Models.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container" style="max-width: 500px; margin: 40px auto;">
    <div class="card shadow-lg rounded-4">
        <div class="card-body p-4">
            @if (ViewBag.Loi != null)
            {
                <div class="alert alert-danger text-center mb-3">
                    @ViewBag.Loi
                </div>
            }
            @Html.HiddenFor(model => model.Id)
            <div class="text-center mb-4">
                <span style="font-size: 2.5rem; color: #ef4444;">&#9888;</span>
                <h3 class="mt-2 mb-3" style="font-weight: 700; color: #ef4444;">Bạn có chắc chắn muốn xóa danh mục này?</h3>
                <p class="text-secondary mb-0">Hành động này không thể hoàn tác.</p>
            </div>
            <div class="mb-4">
                <dl class="row mb-0">
                    <dt class="col-sm-5 text-end text-secondary">ID Phân loại:</dt>
                    <dd class="col-sm-7 text-start fw-bold">@Html.DisplayFor(model => model.IDCate)</dd>
                    <dt class="col-sm-5 text-end text-secondary">Tên phân loại:</dt>
                    <dd class="col-sm-7 text-start fw-bold">@Html.DisplayFor(model => model.NameCate)</dd>
                </dl>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-center gap-3">
                    <input type="submit" value="Xác nhận xóa" class="btn btn-danger rounded-pill px-4 py-2" />
                    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn btn-outline-secondary rounded-pill px-4 py-2" })
                </div>
            }
        </div>
    </div>
</div>