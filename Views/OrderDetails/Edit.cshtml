            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.HiddenFor(model => model.ID)

            <div class="form-group row">
                @Html.LabelFor(model => model.IDProduct, "Product", htmlAttributes: new { @class = "control-label col-md-2" })
